<?xml version="1.0" encoding="utf-8"?>
<log4net>

  <root>
    <level value="DEBUG" />
    <appender-ref ref="ConsoleAppender" />
    <appender-ref ref="AssetLinkApiAppender" />
  </root>

  <logger name="AssetLinkApiUsage" additivity="false">
    <level value="DEBUG" />
    <appender-ref ref="ConsoleAppender" />
    <appender-ref ref="AssetLinkApiAppender" />
  </logger>

  <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender, log4net">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MMM-dd HH:mm:ss.fff} %c{3}(%line) - %m%n" />
    </layout>
    <mapping>
      <level value="ERROR" />
      <foreColor value="Red, HighIntensity" />
    </mapping>
    <mapping>
      <level value="WARN" />
      <foreColor value="Yellow, HighIntensity" />
    </mapping>
    <mapping>
      <level value="INFO" />
      <foreColor value="White" />
    </mapping>
    <mapping>
      <level value="DEBUG" />
      <foreColor value="Cyan" />
    </mapping>
  </appender>

  <!--Application log (located in "Logs" subdirectory under where the enclosing runtime is installed as local text file.-->
  <appender name="AssetLinkApiAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Logs//AssetLinkApi-" />
    <datePattern value="yyyyMMdd'.log'" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <maxSizeRollBackups value="3" />
    <maximumFileSize value="1MB" />
    <preserveLogFileNameExtension value="true" />
    <countDirection value="1" />
    <param name="StaticLogFileName" value="false" />
    <lockingModel type="log4net.Appender.FileAppender+InterProcessLock" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{yyyy-MMM-dd HH:mm:ss.fff} %c{3}(%line) - %m%n" />
    </layout>
  </appender>


  <!--  FileAppender.ExclusiveLock, FileAppender.MinimalLock and FileAppender.InterProcessLock-->

  <!-- Logging levels for Log4Net. In order of increasing priority."-->
  <!--
    •ALL 
    •DEBUG 
    •INFO 
    •WARN 
    •ERROR 
    •FATAL 
    •OFF 
    -->

</log4net>